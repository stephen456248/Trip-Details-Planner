<style type="text/css">

.base_div{
	opacity:0.8;
	background-color:#ccc;
	position:relative;
	width:100%;
	height:100%;
	top:0px;
	left:0px;
	z-index:1000;
	overflow: scroll;
	
}

.forcast_div{
	width: 950px;
	height: 400px;
	border: 2px solid black;
	resize: both;
	text-align: center;
	overflow: auto;
}

.day_forcast_div{
	width:100px;
	height:250px;
	float:left;
	background:white;
	border: 2px solid black;
	margin-left: 10px;
	margin-right: 0px;
	margin-bottom: 20px;
	margin-top: 10px;
	resize: both;
	display: inline-block;
}

.roads{
	width: 950px;
	resize: both;
	border: 2px solid black;
}

.high{
	color: #F90202;
	width:92px;
	height:20px;
	float:center;
	background:white;
	margin-bottom: 0px;
	margin-top: 0px;
	margin-left: 0px;
	margin-right: 0px;
	resize: both;
	display: inline-block;

}

.low{
	color: #2568D0;
}

.image{
	width:92px;
	height:50px;
	float:center;
	background:white;
	margin-bottom: 70px;
	margin-top: 100px;
	margin-left: 5px;
	margin-right: 5px;
	resize: both;
	display: inline-block;
}

.road-name{
	padding-left: 40px;

}

</style>

<pre>
  <%# session[:weather][:icons].inspect.html_safe %>
</pre>


<div id='base_div' class='base_div'>

  <div id='forcast_div' class='forcast_div'>
  	<h1 align="center">Four Day Weather Outlook</h1>

  	<% @days.each_with_index do |day, i| %>
    <div id='day<%= i %>_forcast_div' class='day_forcast_div'>
      <span class='image'> <%= image_tag(day[:icon], alt: "Weather Image") %></span><br>
      <span class='<%= day[:type] %>'><%= day[:temp] %></span>
    </div>
    <% end %>

  </div>
  <div id='roads' class='roads'>
  	<h1 align="center">Roads</h1>
  	<% session[:roads].each do |road| %>
  	  <h2 class="road-name"><%= road.split("<br>")[1] %> </h2>
  	  <span><%= road.html_safe %></span>
  	  <hr>
  	<% end %>
  	<% if session[:roads].length < 4 %>
  		<%= link_to "Select Another Road", roads_path %>
  	<% end %>
  </div>

</div>